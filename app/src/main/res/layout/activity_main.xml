<?xml version="1.0" encoding="utf-8"?>
<com.peter.activitymanagertest.view.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/root"
    android:layout_height="match_parent"
    tools:context="com.peter.activitymanagertest.activity.MainActivity">

    <Button android:id="@+id/second_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Second Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_below="@id/second_activity"
        android:id="@+id/main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Main Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_below="@id/main_activity"
        android:id="@+id/frame_layout_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FrameLayoutActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_below="@id/frame_layout_activity"
        android:id="@+id/frame_show_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.peter.activitymanagertest.view.LifeCycleView
        android:layout_below="@id/frame_show_dialog"
        android:background="#ff0"
        android:id="@+id/life_view"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <Button
        android:layout_below="@id/life_view"
        android:text="fragment test"
        android:id="@+id/fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@id/fragment"
        android:text="animation"
        android:id="@+id/animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button android:layout_below="@id/animation"
        android:id="@+id/image"
        android:text="view Animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button android:layout_below="@id/image"
        android:id="@+id/coordinator"
        android:text="Coordinator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</com.peter.activitymanagertest.view.MyRelativeLayout>
